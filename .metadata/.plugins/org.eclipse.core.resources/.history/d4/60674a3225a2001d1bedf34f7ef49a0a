package com.thoughtfocus;

import java.util.*;

public class HashMapExample {
	public void example() {

		HashMap<Integer, String> map = new HashMap<Integer, String>();// Creating HashMap
		map.put(1, "Mango"); // insert elements in Map
		map.put(2, "Apple");
		map.put(3, "Banana");
		map.put(4, "Grapes");
		map.put(1, "Orange"); // duplicate key

		System.out.println(map);

		map.putIfAbsent(103, "Gaurav");//adding elements
		map.put(104, "Ravi");
		System.out.println("after adding elements" + map);
		
		map.containsKey(4);
		map.containsValue("Apple");
		map.entrySet();
		map.get(4);
		map.isEmpty();
		map.size();
		map.values();


		// key-based removal
		map.remove(103);
		System.out.println(map);
		// key-value pair based removal
		map.remove(104, "Ravi");
		System.out.println(map);

		//updating elements
		map.replace(3, "Mango");
		System.out.println(map);
		map.replace(4, "Grapes", "Banana");
		System.out.println(map);

		System.out.println("Iterating Hashmap...");
		for (Map.Entry m : map.entrySet()) {
			System.out.println(m.getKey() + " " + m.getValue());
		}
	}
}
